{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "luma",
  "version": "0.1.0",
  "identifier": "dev.luma.chat",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5177",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "luma",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' http: https:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
